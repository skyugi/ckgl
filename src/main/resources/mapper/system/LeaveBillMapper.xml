        <include refid="Base_Column_List" />
        from sys_leavebill
        <where>
            <if test="title!=null">
                and title like "%"#{title}"%"
            </if>
            <if test="reason!=null">
                and reason like "%"#{reason}"%"
            </if>
            <if test="startTime!=null">
                and leavetime>=#{startTime}
            </if>
            <if test="endTime!=null">
                and leavetime  <![CDATA[<=]]>
                #{endTime}
            </if>
            <if test="userid!=null">
                and userid=#{userid}
            </if>
        </where>
